#include <windows.h>

#define VERSION_VALUE "1.0.1.0"
#define VERSION_DIGITALVALUE 1,0,1,0

VS_VERSION_INFO VERSIONINFO
FILEVERSION VERSION_DIGITALVALUE
PRODUCTVERSION VERSION_DIGITALVALUE
FILEFLAGSMASK 0x3fL
FILEFLAGS 0
FILEOS VOS_NT_WINDOWS32
FILETYPE VFT_APP
FILESUBTYPE VFT2_UNKNOWN
BEGIN
   BLOCK "VarFileInfo"
   BEGIN
      VALUE "Translation", 0x409, 1200
   END
   BLOCK "StringFileInfo"
   BEGIN
      BLOCK "040904b0"
      BEGIN
         VALUE "CompanyName", "https://github.com/shriprem/StayAwake_NPP_Plugin"
         VALUE "FileDescription", "StayAwake plugin for Notepad++"
         VALUE "FileVersion", VERSION_VALUE
         VALUE "InternalName", "StayAwake_NPP.dll"
         VALUE "LegalCopyright", "Copyright (C) 2025 by Shridhar Kumar"
         VALUE "OriginalFilename", "StayAwake_NPP.dll"
         VALUE "ProductName", "StayAwake_NPP"
         VALUE "ProductVersion", VERSION_VALUE
      END
   END
END
